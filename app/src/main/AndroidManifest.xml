<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openhack.market30">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".CustomScannerActivity" />
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".complete_payment"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".BarcodeRequest"></activity>
        <activity android:name=".BarcodeScan"></activity>
        <activity android:name=".ConfirmBarcode"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".MarketActivity"></activity>
        <activity android:name=".ProductActivity"></activity>
        <activity android:name=".AddressPopupActivity"
            android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>